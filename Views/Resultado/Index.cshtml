@model IEnumerable<MVC_FUT_NFL.Models.Resultado>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Agregar">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Score
            </th>
            <th>
                ID Equipos
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ScoreEquipo1) - @Html.DisplayFor(modelItem => item.ScoreEquipo2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdPartidoNavigation.IdEquipo1Navigation.Nombre)
                    <b> vs </b>
                    @Html.DisplayFor(modelItem => item.IdPartidoNavigation.IdEquipo2Navigation.Nombre)
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Eliminar" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
