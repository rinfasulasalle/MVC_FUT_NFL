@model IEnumerable<MVC_FUT_NFL.Models.Partido>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Agregar">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                Equipo Uno
            </th>
            <th>
                Equipo Dos
            </th>
            <th>
                Estadio
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.IdEquipo1Navigation.Nombre)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.IdEquipo2Navigation.Nombre)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.IdEstadioNavigation.Nombre)
            </td>
            <td>
                    <a asp-action="Editar" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Detalle" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Eliminar" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
