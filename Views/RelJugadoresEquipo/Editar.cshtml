@model MVC_FUT_NFL.Models.RelJugadoresEquipo

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Jugador: @Model.IdJugadorNavigation.NombreCompleto</h4>
<h4>Actual Equipo: @Model.IdEquipoNavigation.Nombre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdJugador" />
            <div class="form-group">
                <label asp-for="IdEquipo" class="control-label">Equipo</label>
                <select asp-for="IdEquipo" class="form-control" id="ddlIdEquipo"
                        asp-items="@(new SelectList(ViewBag.IdEquipo,"Id","Nombre"))"></select>
                <span asp-validation-for="IdEquipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
